{{ form_errors(form) }}

<div class="ui two column stackable grid">
    <div class="column">
        <div class="ui segment">
            {{ form_row(form.name) }}
{#            {% include '@OdiseoSyliusEasyPostPlugin/Field/_slug.html.twig' with { 'slugField': form.slug } %}#}
            {{ form_row(form.apiKey) }}
            {{ form_row(form.enabled) }}
        </div>
    </div>
    <div class="column">
        <div class="ui attached segment">
            <div class="field">
                {{ form_row(form.street1) }}
            </div>
            <div class="two fields">
                {{ form_row(form.street2) }}
                {{ form_row(form.phone) }}
            </div>
            <div class="two fields">
                {{ form_row(form.city) }}
                {{ form_row(form.state) }}
            </div>
            <div class="two fields">
                {{ form_row(form.country) }}
                {{ form_row(form.zip) }}
            </div>
        </div>
    </div>
</div>

